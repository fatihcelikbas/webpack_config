{
  "name": "webpack_config",
  "version": "1.0.0",
  "private": true,
  "description": "My ideal webpack configuration",
  "scripts": {
    "start": "cross-env SERVE=true webpack serve --config config/webpack.dev.js",
    "watch": "webpack --watch --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
    "build-dev": "webpack --config config/webpack.dev.js",
    "clean": "rm -rf ./dist"
  },
